<!DOCTYPE html>
<html lang="zh-cmn-Hans" xmlns:th="http://www.thymeleaf.org">
<head>
    <import th:include="admin/include/head" th:remove="tag"/>
    <link rel="stylesheet" th:href="@{/plugins/fileinput/css/fileinput.css}"/>
    <link rel="stylesheet" th:href="@{/plugins/fileinput/themes/explorer/theme.css}"/>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <import th:include="admin/include/layout" th:remove="tag"/>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <import th:include="admin/include/title" th:remove="tag"/>

        <!-- Main content -->
        <section class="content">

            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#base_list" data-toggle="tab">基本信息</a></li>
                    <li><a href="#class_list" data-toggle="tab">规格列表</a></li>
                    <li><a href="#comment_list" data-toggle="tab">评价列表</a></li>

                    <li class="pull-right"><a href="javascript:;" class="text-primary" id="btn_add_new"><i class="fa fa-plus"></i> 新增</a></li>
                </ul>
                <!-- .tab-content -->
                <div class="tab-content">

                    <div class="tab-pane active" id="base_list">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-md-12">
                                        <!-- 树列表 -->
                                        <div id="base_tree"></div>
                                    </div>
                                    <div class="col-md-12 col-md-offset-2">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default btn-tree-add">新增</button>
                                            <button type="button" class="btn btn-default btn-tree-edit">编辑</button>
                                            <button type="button" class="btn btn-default btn-tree-del">删除</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <table id="base_data_table" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="base_data_table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">ID</th>
                                        <th class="sorting" tabindex="0" aria-controls="base_data_table" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">类别编码</th>
                                        <th class="sorting" tabindex="0" aria-controls="base_data_table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">商品名称</th>
                                        <th class="sorting" tabindex="0" aria-controls="base_data_table" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">价格</th>
                                        <th class="sorting" tabindex="0" aria-controls="base_data_table" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">店铺名称</th></tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="class_list">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="class_list_table" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="class_list_table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">ID</th>
                                        <th class="sorting" tabindex="0" aria-controls="class_list_table" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">尺码</th>
                                        <th class="sorting" tabindex="0" aria-controls="class_list_table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">颜色</th>
                                        <th class="sorting" tabindex="0" aria-controls="class_list_table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">操作</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="comment_list">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="comment_list_table" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="comment_list_table" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">ID</th>
                                        <th class="sorting" tabindex="0" aria-controls="comment_list_table" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">评价账号</th>
                                        <th class="sorting" tabindex="0" aria-controls="comment_list_table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">星级</th>
                                        <th class="sorting" tabindex="0" aria-controls="comment_list_table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">评价内容</th>
                                        <th class="sorting" tabindex="0" aria-controls="comment_list_table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">时间</th>
                                        <th class="sorting" tabindex="0" aria-controls="comment_list_table" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">操作</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.tab-content -->

            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <import th:include="admin/include/copyright" th:remove="tag" />
</div>
<!-- ./wrapper -->
<import th:include="admin/goodsinfo/form" th:remove="tag" />

<import th:include="admin/include/footer" th:remove="tag" />
<script th:src="@{/plugins/fileinput/js/plugins/sortable.js}"></script>
<script th:src="@{/plugins/fileinput/js/fileinput.js}"></script>
<script th:src="@{/plugins/fileinput/js/locales/zh.js}"></script>
<script th:src="@{/plugins/fileinput/themes/explorer/theme.js}"></script>

<script th:inline="javascript">
    // 用户权限
    var accessCreate = [[${user.hasAccessModuleAction('module', 'C')}]];
    var accessUpdate = [[${user.hasAccessModuleAction('module', 'U')}]];
    var accessDelete = [[${user.hasAccessModuleAction('module', 'D')}]];
</script>
<script th:src="@{/js/admin/goodsinfo/list.js}"></script>
</body>
</html>
